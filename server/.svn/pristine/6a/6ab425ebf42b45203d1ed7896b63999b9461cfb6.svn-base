package com.cheyooh.service.sdk.action.notify;

import com.cheyooh.service.framework.idata.Cmd;

import java.util.Date;

import org.apache.commons.lang.StringUtils;

import com.cheyooh.service.dal.DAL;
import com.cheyooh.service.dal.DALFactory;
import com.cheyooh.service.framework.idata.Result;
import com.cheyooh.service.framework.idata.ResultXJContent;
import com.cheyooh.service.sdk.db.dao.SdkNotifyMmdoMapper;
import com.cheyooh.service.sdk.db.entity.SdkNotifyMmdo;

public class CmccxunwangNotify extends AbstractNotifyService<Cmd> {
	private String success_msg="ok";
//	private String faile_msg="Err";
	private String payChannelCode="cmccxunwang";
	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.cheyooh.service.framework.basic.Service#verify(com.cheyooh.service
	 * .framework.idata.Cmd)
	 */
	@Override
	protected Result verify(Cmd cmd) {
		return null;
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.cheyooh.service.framework.basic.Service#execute(com.cheyooh.service
	 * .framework.idata.Cmd)
	 */
	@Override
	protected Result execute(Cmd cmd) {
		DAL dal = DALFactory.createDAL();
		try {
			String mobile = cmd.getServiceContext().getRequest()
					.getParameter("mobile");
			if(StringUtils.isEmpty(mobile)){
				mobile="";
			}
			
			String linkid = cmd.getServiceContext().getRequest()
					.getParameter("linkid");
			if(StringUtils.isEmpty(linkid)){
				linkid="";
			}
			
			String fee = cmd.getServiceContext().getRequest()
					.getParameter("fee");
			if(StringUtils.isEmpty(fee)){
				fee="";
			}
			
			String ywid = cmd.getServiceContext().getRequest()
					.getParameter("ywid");
			if(StringUtils.isEmpty(ywid)){
				ywid="";
			}
			
			String content = cmd.getServiceContext().getRequest()
					.getParameter("content");
			if(StringUtils.isEmpty(content)){
				content="";
			}
			
			String longnum = cmd.getServiceContext().getRequest()
					.getParameter("longnum");
			if(StringUtils.isEmpty(longnum)){
				longnum="";
			}
			
			String status = cmd.getServiceContext().getRequest()
					.getParameter("status");
			if(StringUtils.isEmpty(status)){
				status="";
			}
			
			logger.info("the cmccxunwang notify linkid ="+linkid);
			if("DELIVRD".equals(status)){
				SdkNotifyMmdo sdkNotifyMmdo = new SdkNotifyMmdo();
				sdkNotifyMmdo.setLinkid(linkid);
				sdkNotifyMmdo.setSpid(ywid);
				sdkNotifyMmdo.setCmd(content);
				sdkNotifyMmdo.setMobile(mobile);
				sdkNotifyMmdo.setSpnum(longnum);
				sdkNotifyMmdo.setGameId(189);
				sdkNotifyMmdo.setAmount(Float.valueOf(fee));
				sdkNotifyMmdo.setCreateTime(new Date());
				sdkNotifyMmdo.setOperationType(1);
				sdkNotifyMmdo.setPayChannelCode(payChannelCode);
				SdkNotifyMmdoMapper sdkNotifyMmdoMapper = dal
						.getMapper(SdkNotifyMmdoMapper.class);
				sdkNotifyMmdoMapper.insertSelective(sdkNotifyMmdo);
			}
			dal.commit();
		} catch (Exception e) {
			logger.error("the cmccxunwang notify error!", e);
		} finally {
			dal.close();
		}
		return response(success_msg);
	}

	private Result response(String msg) {
		return new Result(new ResultXJContent(msg, msg));
	}
}
