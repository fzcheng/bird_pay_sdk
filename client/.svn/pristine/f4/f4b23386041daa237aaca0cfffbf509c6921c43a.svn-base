<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dip"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/lgsdk_sendsms_dialog_cancel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageButton 
                android:id="@+id/lgsdk_sendsms_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lgsdk_icon_failed"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
	        android:id="@+id/lgsdk_upgrade_dialog_title_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/lgsdk_confirm_dialog_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="#32cd32"
	            android:textSize="30sp"
	            android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lgsdk_confirm_dialog_content_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >
			<TextView
			    android:id="@+id/lgsdk_confirm_dialog_companyname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@color/lgsdk_text_color_gray_2e2e2e"
                android:textSize="16sp"
			    />
            <TextView
                android:id="@+id/lgsdk_confirm_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lgsdk_confirm_dialog_companyname"
                android:layout_alignLeft="@id/lgsdk_confirm_dialog_companyname"
                android:textColor="@color/lgsdk_text_color_gray_2e2e2e"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/lgsdk_confirm_dialog_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/lgsdk_confirm_dialog_companyname"
                android:layout_below="@id/lgsdk_confirm_dialog_content"
                android:textColor="@color/lgsdk_text_color_gray_2e2e2e"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lgsdk_confirm_dialog_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:gravity="center" >

            <Button
                android:id="@+id/lgsdk_confirm_dialog_button1"
                android:layout_width="180dip"
                android:layout_height="38dip"
                android:background="@drawable/lgsdk_button_bg_red"
                android:padding="5dip"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>