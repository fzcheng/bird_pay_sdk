<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="255dip"
    android:background="@drawable/lgsdk_main_gray_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dip" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/lgsdk_icon" />

    <TextView
        android:id="@+id/lgsdk_regisger_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/lgsdk_register_success"
        android:textColor="@color/lgsdk_text_color_orange_d94900"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/lgsdk_white_background_round_corner"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/lgsdk_icon_user" />

            <TextView
                android:id="@+id/lgsdk_regisger_username_tv"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="bottom"
                android:textColor="@color/lgsdk_text_color_gray_2e2e2e"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/lgsdk_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/lgsdk_icon_pwd" />

            <EditText
                android:id="@+id/lgsdk_register_pwd_et"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/lgsdk_please_input_password"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:textColor="@color/lgsdk_text_color_gray_2e2e2e"
                android:textColorHint="@color/lgsdk_text_color_gray_8b8b8b"
                android:textSize="16sp" />

            <Button
                android:id="@+id/lgsdk_register_modify_btn"
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:background="@drawable/lgsdk_button_bg_red"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/lgsdk_modify"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/lgsdk_register_login_btn"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/lgsdk_button_bg_red"
        android:text="@string/lgsdk_now_login"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >

        <TextView
            android:id="@+id/lgsdk_register_change_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="@string/lgsdk_change_account"
            android:textColor="@color/lgsdk_text_color_orange_d94900"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lgsdk_register_protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:text="@string/lgsdk_login_protocol_hint"
            android:textColor="@color/lgsdk_text_color_gray_8b8b8b"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>