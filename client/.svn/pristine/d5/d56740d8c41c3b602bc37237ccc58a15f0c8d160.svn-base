<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    >
    
    <ImageView 
        android:id="@+id/mbs_paytype_item_iv_logo"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:src="@drawable/alipay"
        />
    
     <ImageView 
        android:id="@+id/mbs_paytype_item_iv_right"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/pay_type_right"
        />

     <LinearLayout
         android:id="@+id/mbs_paytype_item_ly_explain"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/mbs_paytype_item_iv_logo"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/mbs_paytype_item_tv_explain"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="支付宝支付"
             android:textSize="25sp" />
     </LinearLayout>

</RelativeLayout>
