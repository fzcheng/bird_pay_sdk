<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lgsdk_main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/lgsdk_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/lgsdk_retrive_account_phone_layout"
                layout="@layout/lgsdk_retrive_account_item_layout" />

            <include
                android:id="@+id/lgsdk_retrive_account_vcode_layout"
                layout="@layout/lgsdk_retrive_account_item_layout" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>